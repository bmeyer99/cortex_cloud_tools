						{
							"name": "Create a cloud onboarding integration template",
							"request": {
								"method": "POST",
								"header": [
									{
										"key": "Authorization",
										"value": "{{X_API_KEY}}",
										"type": "text"
									},
									{
										"key": "x-xdr-auth-id",
										"value": "{{X_XDR_AUTH_ID}}",
